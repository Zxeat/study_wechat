.tab_test{
    display: flex;
}
.tab_item{
    flex: 1;
    text-align: center;
    padding:10rpx 0;
}
.tab_test .active{
    border-bottom: 5rpx solid red;
}
.show{
    background-color: #ccc;
    opacity: 0.5;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 100;
    display: flex;
    justify-content: center;
    align-items: center;
}
.show image{
    width: 600rpx;
}
.show .close{
    position: absolute;
    top: 30%;
    right: 20%;
    width: 15px;
    border: 1px solid #fff;
    border-radius: 50%;
    text-align: center;
    color: #fff;
}
.sendvalue{
    border: 1px solid #ccc;
    margin: 20px 0;
}
.btn_saoma{
    margin: 50px auto;
}