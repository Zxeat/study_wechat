@import '../../iconfont/iconfont.wxss';
.check{
    color: skyblue;
    font-size: 50rpx;
}
.box{
    width: 100%;
    height: 50px;
    display: flex;
    border-bottom: 2rpx dotted skyblue;
    justify-content: center;
    align-items: center;
}
.box view{
    flex: 1;
    padding: 0 10rpx;
}
.shop_box{
    position: relative;
    left: -140rpx;
}
.shop_size{
    font-size: 26rpx;
    color: #ccc;
}
.item_money{
    position: relative;
    left: 40rpx;
}
.item_number{
    display: flex;
}
.item_number view{
    flex: 1;
    justify-content: space-between;
    align-items: center;
}
.mo_ren{
    text-align: center;
    width: 15rpx;
    height: 50rpx;
    line-height: 50rpx;
}
.jian,.add{
    width: 15rpx;
    height: 50rpx;
    border: 2rpx solid skyblue;
    border-radius: 50%;
    text-align: center;
    line-height: 50rpx;
    color: skyblue;
}
.add{
    color: #fff;
    background-color: skyblue;
}
.bottom_box{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex: 1;
    background-color:#eee;
}
.select{
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.select .chooes_text{
    position: relative;
    left: 10rpx;
}
.total_money{
    position: relative;
    left: 50px;
    text-align: right;
    line-height: 50px;
}
.btn{
    width: 30%;
    height: 100%;
    background-color: orangered;
    color: #fff;
    border: 2rpx solid orangered;
    text-align: center;
    line-height: 50px;
}